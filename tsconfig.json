{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ES2020",
    "moduleResolution": "bundler",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "noEmit": true,
    "composite": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "resources",
    "allowJs": true,
    "checkJs": true,
    "moduleDetection": "force",
    "paths": {
      "@/*": ["./*"]
    },
    "types": ["vite/client"]
  },
  "include": [
    "**/*.d.ts",
    "resources/**/*.js",
    "resources/**/*.ts",
    "resources/**/*.svelte",
    "vite.config.ts"
  ]
}
